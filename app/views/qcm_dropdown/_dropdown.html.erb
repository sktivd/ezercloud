<div class="dropdown btn-group" id=<%= menu_id + "-frame" %> for=<%= "quality_control_material_" + menu_id %>>
  <button class="btn btn-default form-control dropdown-toggle" type="button" id="<%= menu_id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= title %>
    <span class="caret"></span>
  </button>
  <% if data %>
    <ul class="dropdown-menu" aria-labelledby=<%= menu_id %>>
      <% ('A'..'Z').each do |alphabet| %>
        <% data_alpha = data.map { |d| d if d.instance_eval(label).start_with?(alphabet, alphabet.downcase) }.compact %>
        <% if data_alpha.size > 0 %>
          <li class="dropdown-header"><%= alphabet %></li>
          <% data_alpha.each do |alpha| %>
            <li><%= link_to alpha.instance_eval(label), qcm_dropdown_path(qcm: {value: alpha.instance_eval(value), type: menu_id}), method: :post, remote: true %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</div>
