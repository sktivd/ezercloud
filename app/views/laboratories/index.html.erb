<% content_for :breadcrumb do %>
  <li class="active">Laboratories</li>
<% end %>

<div class='alert alert-info fade in' data-alert='alert'>
  <h3>
    <strong>
      Reference Laboratory Sites for Quality Control
    </strong>
  </h3>
  <p>Here you'll see the list of references laboratory sites.</p>
  <p>Those sites show operational QC management level.</p>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Ip address</th>
      <th>Equipment</th>
      <th>Kit </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td><%= laboratory.ip_address %></td>
        <td><%= laboratory.equipment %></td>
        <td><%= laboratory.kit %></td>
        <td><%= link_to 'Show', laboratory %></td>
        <td><%= link_to 'Edit', edit_laboratory_path(laboratory) %></td>
        <td><%= link_to 'Destroy', laboratory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Laboratory', new_laboratory_path %>
