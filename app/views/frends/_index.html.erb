<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Measured</th>
      <th>IP address</th>
      <th>Serial number</th>
      <th>Type</th>
      <th>Processed</th>
      <th>Kit</th>
      <th>Results</th>
      <th>QC material</th>
      <% if administrator? %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% equipment.each do |frend| %>
      <tr>
        <td><%= frend.diagnosis.measured_at.to_date %></td>
        <td><%= frend.diagnosis.ip_address %></td>
        <td><%= frend.serial_number %></td>
        <td><%= Frend::TEST_TYPE[frend.test_type] %></td>
        <% if frend.processed %>
          <td><%= frend.processed %></td>
        <% else %>
          <td><%= frend.error_code %></td>
        <% end %>
        <td>
          <% if frend.kit != 11 %>
            <a href="#" data-toggle="tooltip" data-placement="right" title="<%= '(' + frend.lot.to_s + ') ' +  assay_kits[frend.kit][:reagents].join(",  ") %>"><%= assay_kits[frend.kit][:kit] %></a>
          <% else %>
            <%= assay_kits[frend.kit][:kit] %>
          <% end %>
        </td>
        <td><%= frend.test_values.join(", ") %></td>
        <td><%= frend.qc_service + " \#" + frend.qc_lot if frend.qc_service and frend.qc_service != "" %></td>
        <% if administrator? %>
          <td><%= link_to 'Destroy', frend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate equipment, remote: true, params: { active: 'frends' } %>
