<% content_for :breadcrumb do %>
  <li class="active">Management</li>
<% end %>

<div class='alert alert-info fade in' data-alert='alert'>
  <h3>
    User <strong><%= @user.name %></strong> <small><%= @user.full_name %></small>
  </h3>
</div>

<div class="row marketing">
  <div class="col-lg-4">
    <h4>Information</h4>
    <p class="text-muted"><big><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> E-mail: <%= @user.email %></big></p>
  </div>

  <div class="col-lg-4">
    <h4>Access privileges</h4>
    <% if @user.privilege_super %>
      <p class="text-primary"><big><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Super user</big></p>
    <% end %>
    <% if @user.privilege_reagent %>
      <p class="text-success"><big><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Reagent Manager</big></p>
    <% end %>
    <% if @user.privilege_notification %>
      <p class="text-warning"><big><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Notification Reciever</big></p>
    <% end %>
    <% if @user.privilege_monitoring %>
      <p class="text-warning"><big><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Monitoring</big></p>
    <% end %>
    <% if @user.privilege_qc %>
      <p class="text-warning"><big><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Quality Control</big></p>
    <% end %>
  </div>
  
  <div class="col-lg-4">
    <h4>Permitted Equipment</h4>
    <% if @user.equipment_frends %>
      <p><big><kbd>FREND<kbd></big></p>
    <% end %>
  </div>
</div>

<br>
<div class="row">
  <div class="col-lg-12">
    <%= link_to 'Change settings', edit_user_path(@user, change_mode: 'settings') -%> |
    <%= link_to 'Change password', edit_user_path(@user, change_mode: 'password') %>
  </div>
</div>