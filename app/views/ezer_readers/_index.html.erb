<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Measured</th>
      <th>IP address</th>
      <th>Location</th>
      <th>Serial number</th>
      <th>Kit</th>
      <th>Results</th>
      <% if administrator? %>
        <th colspan="2"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% equipment.each do |ezer_reader| %>
      <tr>
        <td><%= ezer_reader.diagnosis.measured_at.to_date %></td>
        <td><%= ezer_reader.diagnosis.ip_address %></td>
        <td><%= ezer_reader.diagnosis.location %></td>
        <td><%= ezer_reader.serial_number %></td>
        <td><%= ezer_reader.kit + ":" + ezer_reader.lot %></td>
        <% if ezer_reader.processed %>
          <td><%= ezer_reader.test_result %></td>
        <% else %>
          <td><%= ezer_reader.error_code %></td>
        <% end %>
        <td><%= link_to 'Show', diagnosis_path(ezer_reader, active: 'ezer_reader'), method: :get, remote: true %></td>
        <% if administrator? %>
          <td><%= link_to 'Destroy', diagnosis_path(ezer_reader.diagnosis, active: 'ezer_readers', page: page), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
