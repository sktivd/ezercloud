<%= javascript_include_tag 'emails' %>
<%= stylesheet_link_tag 'emails' %>

<style>
@media (min-width: 960px) {
    .container{
        max-width: 800px;
    }
}
</style>

<div class="container">
  <div class='alert alert-info fade in' data-alert='alert'>
    <h3>
      <strong>
        To. <%= @data[:name] ? @data[:name] + ' (' + @data[:email] + ')' : @data[:email] %>
      </strong>
    </h3>
    <p><%= @notification.message.sub("\n", "</p><p>").html_safe %></p>
  </div>

  <p><span class="glyphicon glyphicon-remove"></span> We are really sorry, but requested role was declined.</p>
  <% if @data[:note] %>
    <blockquote>
      <p><%= @data[:note].sub("\n", "</p><p>").html_safe %></p>
    </blockquote>
  <% end %>
    
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Requested Role</div>
      
    <!-- List group -->
    <ul class="list-group">
      <li class="list-group-item">
        <p>Role: <%= Account::ROLES[@data[:role].to_sym] %></p>
        <% if @data[:field] %>
          <p>Field: <%= @data[:field] %></p>
        <% end %>
        <% if (@data[:from] && @data[:from] != '') || (@data[:to] && @data[:to] != '') || @data[:location] %>
          <hr />
          <p>OPTIONAL</p>
          <% if (@data[:from] && @data[:from] != '') || (@data[:to] && @data[:to] != '') %>
            <p>Period : <%= @data[:from] + ' ~ ' + @data[:to] %></p>
          <% end %>
          <% if @data[:location] && @data[:location] != '' %>
            <p>Location : <%= @data[:location] %> </p>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
  
  <hr style="width: 25%; margin-left: 0">
  <h4>EzerCloud, SK telecom</h4>
  
  <p class="small text-muted">This mail is automatically generated. Please do not reply.</p>
</div>