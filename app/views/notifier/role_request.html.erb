<%= javascript_include_tag 'emails' %>
<%= stylesheet_link_tag 'emails' %>

<style>
@media (min-width: 960px) {
    .container{
        max-width: 800px;
    }
}
</style>

<div class="container">
  <div class='alert alert-info fade in' data-alert='alert'>
    <h3>
      <strong>
        <%= @data[:name] ? @data[:name] + ' (' + @data[:email] + ')' : @data[:email] %> has requested a role.
      </strong>
    </h3>
    <p><%= @notification.message.sub("\n", "</p><p>").html_safe %></p>
  </div>
    
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Requested Role</div>
      
    <!-- List group -->
    <ul class="list-group">
      <li class="list-group-item">
        <p>Role: <%= Account::ROLES[@data[:role].to_sym] %></p>
        <% if @data[:field] %>
          <p>Field: <%= @data[:field] %></p>
        <% end %>
        <% if (@data[:from] and @data[:from] != '') or (@data[:to] and @data[:to] != '') or @data[:location] %>
          <hr />
          <p>OPTIONAL</p>
          <% if (@data[:from] and @data[:from] != '') or (@data[:to] and @data[:to] != '') %>
            <p>Period : <%= @data[:from] + ' ~ ' + @data[:to] %></p>
          <% end %>
          <% if @data[:location] and @data[:location] != '' %>
            <p>Location : <%= @data[:location] %> </p>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
  
  <p><%= link_to 'Permit or Decline' , @notification.url, class: 'btn btn-default', role: 'button' %></p>
  
  <hr style="width: 25%; margin-left: 0">
  <h4>EzerCloud, SK telecom</h4>
  
  <p class="small text-muted">This notification will be expired at <%= @notification.expired_at %>.</p>
  <p class="small text-muted">This mail is automatically generated. Please do not reply.</p>
</div>