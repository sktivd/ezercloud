<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Equipment</th>
      <th>Order Number</th>
      <th>Measured</th>
      <th>Ip address</th>
      <th>Location</th>
      <th>Transmitted</th>
      <th>Technician</th>
    </tr>
  </thead>

  <tbody>
    <% equipment.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.equipment %></td>
        <td><%= diagnosis.order_number %></td>
        <td><%= diagnosis.measured_at.to_date %></td>
        <td><%= diagnosis.ip_address %></td>
        <td><%= diagnosis.location %></td>
        <td><%= diagnosis.created_at %></td>
        <td><%= diagnosis.technician %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate equipment, remote: true, params: { active: 'diagnoses' } %>
