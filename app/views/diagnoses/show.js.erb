$("#detail-<%= @active %>").html("<%= escape_javascript(render partial: @active + '/show', locals: { equipment: @equipment }) %>");
$("#detail-<%= @active %>").collapse('show');
$("body").scrollspy({ 
    target: "#navbar-<%= @active %>",
    offset: 100
});
$("#affix-<%= @active %>").affix({
  offset: {
    top: 203,
    bottom: function() {
      return $("#container-<%= @active %>").outerHeight() + $('footer').outerHeight() + 100
    }
  }
});
$(".img-thumbnail").click(function() {
    $("#thumbnail-<%= @active %>").find('img').attr('src', $(this).find('img').attr('src'));
    $("#thumbnail-<%= @active %>").find('img').attr('alt', $(this).find('img').attr('alt'));
});